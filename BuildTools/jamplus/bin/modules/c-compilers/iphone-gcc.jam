				case 4.3 :
					C.CC	= $(developerRoot)/usr/bin/gcc-4.2 ;
					C.C++	= $(developerRoot)/usr/bin/g++-4.2 ;
					C.LINK	= $(developerRoot)/usr/bin/g++-4.2 ;
