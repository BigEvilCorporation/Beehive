# -------------------------------------------------------------------------------------
# C++Flags
# -------------------------------------------------------------------------------------
# Generic
# -------------------------------------------------------------------------------------

C.C++Flags * :
	-Wno-deprecated 
	-g3 
#	-Wall 
	-fmessage-length=0
	;
	
# -------------------------------------------------------------------------------------
# Debug
# -------------------------------------------------------------------------------------
	
C.CFlags * : -O0 : debug ;

# -------------------------------------------------------------------------------------
# Include directories
