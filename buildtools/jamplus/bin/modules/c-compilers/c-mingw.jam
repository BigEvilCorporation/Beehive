rule C.mingw._LinkPrebuiltLibraries {
	local lib ;
	for lib in $(gristedLibraries) {
		if ! $(lib:D) {
   			BINDING on $(lib) = lib$(lib:B) ;
			EXPAND_TEXT on $(lib) = -l$(lib:G=) ;
			NoCare $(lib) ;
   		}
	}
}


